<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.5.0.xsd">
    <changeSet id="4" author="LemyakinDV">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="lectures_speakers"/>
            </not>
        </preConditions>
        <createTable tableName="lectures_speakers">
            <column name="lecture_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_lectures"
                             references="lectures(id)"
                             deleteCascade="false"/>
            </column>
            <column name="speaker_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_speakers"
                             references="speakers(id)"
                             deleteCascade="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>